<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.walidhelaoui.resetandroidapp.Fragments.Quiz.DailySmokingQuiz.DailyQuizS4Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/lung2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/lung2" />

        <LinearLayout
            android:id="@+id/infosLungs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_below="@id/lung2">

            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/arc_progress"
                android:layout_marginLeft="10dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                custom:arc_progress="21"
                custom:arc_finished_color="#ff0000"
                custom:arc_bottom_text="NICOTINE"/>

            <TextView
                android:id="@+id/daysLungs"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="20 Days"
                android:textColor="#000000"
                android:textSize="40dp" />

            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/arc_progress2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                custom:arc_progress="7"
                custom:arc_finished_color="#ff0000"
                custom:arc_bottom_text="TAR"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/infosLungs"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/msgLungs"
                android:singleLine="false"
                android:lines="4"
                android:gravity="center"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:background="@drawable/bubble2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:background="@drawable/monokuma"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
