<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esprit.reset.Fragments.Quiz.DrinkingQuiz.QuizA2Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundlight">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/monokuma"/>

        <LinearLayout
            android:id="@+id/contenuQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="#332d2d"
                android:text="How many drinks containing alcohol do you have on a typical day when you are drinking ?"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contenuQuiz"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/a2_reponse1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="1 or 2"/>
            <Button
                android:id="@+id/a2_reponse2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="3 or 4"/>
            <Button
                android:id="@+id/a2_reponse3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="5 or 6"/>
            <Button
                android:id="@+id/a2_reponse4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="7 , 8 or 9"/>
            <Button
                android:id="@+id/a2_reponse5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="10 or more"/>
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>
