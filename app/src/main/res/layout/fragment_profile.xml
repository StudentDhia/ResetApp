<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.walidhelaoui.resetandroidapp.Fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_perm_identity_black_24dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email : walid.helaoui@esprit.tn"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/textDependance1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="High dependance"
                android:gravity="center_horizontal"
                android:textColor="#000000"/>

            <cn.fanrunqi.waveprogress.WaveProgressView
                android:id="@+id/waveProgressbar"
                android:background="@drawable/heart"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textDependance2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Moderate dependance"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:textColor="#000000"/>

            <cn.fanrunqi.waveprogress.WaveProgressView
                android:id="@+id/waveProgressbar2"
                android:background="@drawable/lung"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
